<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Vehicles</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Vehicle List</h1>

    <div style="text-align: center; margin-bottom: 15px;">
        <% if (typeof user !== 'undefined' && user) { %>
            <p>Welcome, <%= user.username %> | <a href="/logout">Logout</a></p>
        <% } else { %>
            <p><a href="/login">Login</a> | <a href="/register">Register</a></p>
        <% } %>
    </div>


    <div class="add-btn-container">
        <a href="/vehicles/new" class="add-btn">➕ Add Vehicle</a>
    </div>


    <ul>
        <% vehicles.forEach(vehicle => { %>
            <li>
                <h2><%= vehicle.vehicleName %></h2>
                <img src="<%= vehicle.image %>" alt="<%= vehicle.vehicleName %>">
                <p><strong>Brand:</strong> <%= vehicle.brand %></p>
                <p><%= vehicle.desc %></p>
                <p><strong>Price:</strong> ₹<%= vehicle.price %></p>

                <form action="/vehicles/<%= vehicle.id %>/delete" method="POST" style="display: inline;">
                    <button type="submit">Delete</button>
                </form>
                <a href="/vehicles/<%= vehicle.id %>/edit">Edit</a>
            </li>
        <% }) %>
    </ul>
</body>
</html>